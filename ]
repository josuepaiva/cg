#include <iostream>
#include <GL/gl.h>
#include <GL/glut.h>


void display(){
	
	glClear(GL_COLOR_BUFFER_BIT);
	//glRotated(1,0,1,0);

	glBegin(GL_TRIANGLES);
	 glColor3d(1,1,0.5);
	 glVertex3d(-1,0,0);
    	 glVertex3d(1,0,0);
	 glVertex3d(0,1,0);
         
         /*glVertex3d(-1,0,0);
	 glVertex3d(1,0,0);
	 glVertex3d(0,-1,0);*/
	
 	glEnd();

	glFlush();

}

void keyboard(unsigned char key, int a, int b){
	
	switch(key){
		case 'a':
			glutPostRedisplay();
			break;
		case 'c':
			exit(0);
			break;
		case 'r':
			glClearColor(1.0,0.0,0.0,1.0);
			glutPostRedisplay();	
			break;
		case 'g':
			glClearColor(0.0,1.0,0.0,1.0);
			glutPostRedisplay();
			break;
		case 'b':
			glClearColor(0.0,0.0,1.0,1.0);
			glutPostRedisplay();
			break;
	}
}

int main(int argc, char** argv){

	glutInit(&argc, argv);
   	glutInitDisplayMode (GLUT_SINGLE | GLUT_RGB);
   	glutInitWindowSize (350, 350); 
   	glutInitWindowPosition (100, 100);
   	glutCreateWindow ("Slkadl√ßksldsa");
	glutKeyboardFunc(keyboard);
   	glutDisplayFunc(display); 
   	glutMainLoop();


	return 0;
}
